@model RumarApp.Models.ClientViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-center font-bold">Editar Cliente</h1>

<hr />
<div class="panel panel-primary">
    <div class="panel-heading"></div>
    <div class="panel-body row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-md-4">
                <label asp-for="FisrtName" class="control-label">Nombre</label>
                <input asp-for="FisrtName" class="form-control" />
                <span asp-validation-for="FisrtName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="LastName" class="control-label">Apellido</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Identification" class="control-label">Identificacion</label>
                <input asp-for="Identification" class="form-control" />
                <span asp-validation-for="Identification" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Address" class="control-label">Direccion</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div><div class="form-group col-md-4">
                <label asp-for="PhoneNumber" class="control-label">Telefono</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la Consulta</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
