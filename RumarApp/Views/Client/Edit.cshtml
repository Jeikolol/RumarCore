@model RumarApp.Models.ClientViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-center font-bold">Editar Cliente</h1>

<form asp-action="Edit" method="post" id="clientForm">
    <section class="content col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-10">
                                <h3 class="card-title">Cliente</h3>
                            </div>
                        </div>
                    </div>
                    <div class="card-body row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-4">
                            <label asp-for="FisrtName" class="control-label">Nombre</label>
                            <input asp-for="FisrtName" class="form-control" />
                            <span asp-for="FisrtName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="LastName" class="control-label">Apellido</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Identification" class="control-label">Identificacion</label>
                            <input asp-for="Identification" id="identification" class="form-control" disabled/>
                            <span asp-for="Identification" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="PhoneNumber" class="control-label">Telefono</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-for="PhoneNumber" class="text-danger"></span>
                        </div><div class="form-group col-md-4">
                            <label asp-for="MobileNumber" class="control-label">Celular</label>
                            <input asp-for="MobileNumber" class="form-control" />
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="Address" class="control-label">Direccion</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group float-right">
                            <a asp-action="Index" class="btn btn-secondary">Volver a la Consulta</a>
                            <button type="submit" id="submitClient" class="btn btn-success">
                                <i class="fa fa-save fa-fw"></i>Guardar
                            </button>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header text-white">
                        <div class="row">
                            <div class="col-6">
                                <h4 class="mb-0 m-t-10">
                                    <i class="fas fa-list-ul fa-fw"></i> Garantes
                                </h4>
                            </div>
                            <div class="col-6 text-right">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table id="beneficiaryListEdit" class="table table-striped-even-light-blue">
                                        <thead class="text-white">
                                            <tr>
                                                <th class="no-border">Nombre</th>
                                                <th class="no-border">Identificacion</th>
                                                <th class="no-border">Parentezco</th>
                                                <th class="no-border"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var beneficiary in Model.Beneficiaries)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(x => beneficiary.FullName)</td>
                                                    <td>@Html.DisplayFor(x => beneficiary.Identification)</td>
                                                    <td>@Html.DisplayFor(x => beneficiary.RelationshipType)</td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@beneficiary.Id" class="btn btn-sm btn-primary">
                                                            <i class="fas fa-pencil-alt"></i>
                                                        </a>
                                                        <a asp-action="Details" asp-route-id="@beneficiary.Id" class="btn btn-sm btn-success">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

