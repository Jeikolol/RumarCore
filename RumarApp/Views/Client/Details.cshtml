@model RumarApp.Models.ClientViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center font-bold">Detalles del Cliente</h1>
<section class="content col-md-12">
    <div class="row">
        <div class="col-md-9">
            <div class="card card-primary">
                <div class="card-header"></div>
                <div class="card-body row">
                    <div class="col-md-4">
                        <label>Nombre</label>
                        <input class="form-control" type="text" value="@Html.DisplayFor(model => model.FisrtName)" />
                    </div>
                    <div class="col-md-4">
                        <label>Apellido</label>
                        <input class="form-control" type="text" value="@Html.DisplayFor(model => model.LastName)" />
                    </div>
                    <div class="col-md-4">
                        <label>Identificacion</label>
                        <input class="form-control" type="text" value="@Html.DisplayFor(model => model.Identification)" />
                    </div>
                    <div class="col-md-4">
                        <label>Telefono</label>
                        <input class="form-control" type="text" value="@Html.DisplayFor(model => model.PhoneNumber)" />
                    </div>
                    <div class="col-md-4">
                        <label>Direccion</label>
                        <input class="form-control" type="text" value="@Html.DisplayFor(model => model.Address)" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-primary">
                <div class="card-header" style="font-size: 15px">
                    <i class="fa fa-fw fa-cog"></i>Acciones
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item no-borders no-padding">
                            <a class="btn btn-link text-left" asp-action="Edit" asp-route-id="@Model.Id">
                                <i class="fa fa-pencil fa-fw"></i>Editar
                            </a>
                        </li>
                        <li class="list-group-item no-borders no-padding">
                            <a class="btn btn-link text-left" asp-action="Index">
                                <i class="fa fa-list fa-fw"></i>Consulta
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>


