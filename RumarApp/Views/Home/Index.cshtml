@{
    ViewBag.Title = "Index";
}

<style>
    .bg-transparent {
        background-color: transparent !important;
    }

    .widget:hover {
        cursor: pointer !important;
    }

    #page-wrapper {
        background-color: white !important;
    }
</style>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h1 class="text-center font-bold">Rumar</h1>
        </div>
    </div>
    <div>
        <div class="col-lg-3">
            <div class="widget style1 navy-bg shadow-z1" onclick="navigateTo('@Url.Action("Index", "Loans")')" style="height: 110px;">
                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-4">
                        <i class="fa fa-money fa-4x" style="margin-top: 6px !important;"></i>
                    </div>
                    <div class="col-xs-8 text-right" style="margin-top: 10px;">
                        <span style="font-size: 20px !important"><b>Prestamos</b></span>
                        <h2 class=""></h2>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3">
            <div class="widget style1 yellow-bg shadow-z1" onclick="navigateTo('@Url.Action("Index", "Client")')" style="height: 110px;">
                <div class="row" style="margin-top: 10px;">
                    <div class="col-xs-4">
                        <i class="fa fa-users fa-4x" style="margin-top: 6px !important;"></i>
                    </div>
                    <div class="col-xs-8 text-right" style="margin-top: 10px;">
                        <span style="font-size: 20px !important"><b>Clientes</b></span>
                        <h2 class=""></h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal inmodal" id="new-item-modal" role="dialog"></div>
    </div>
</div>
@section Scripts{
    <script src="~/Content/js/app/modalhelper.js"></script>
    <script src="~/Content/js/app/UrlSwalHelper.js"></script>
    <script>
        function navigateTo(url) {
            window.location = url;
        }
    </script>
}
