@model RumarApp.Models.Loan

@{
    ViewData["Title"] = "Pago de Prestamo";
}


@using (Html.BeginForm("Pay", "Loans", FormMethod.Post))
{
    <div class="modal-header bg-primary">
        <h5 class="modal-title">
            <i class="fa fa-check fa-fw fa-3x pull-left"></i>
            <span class="h2">Pago del Prestamo del Cliente</span>
            <button type="button" class="close mt-10" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </h5>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="form-group col-md-4">
                <label>Cliente</label>
                <span class="form-control span-background mx-wi">@Html.DisplayFor(model => model.Clients.FullName)</span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Capital" class="control-label">Monto a Pagar</label>
                <input asp-for="Capital" class="form-control" />
                <span asp-validation-for="Capital" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <form asp-action="PayLoan">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Pagar" class="btn btn-success" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        </form>
    </div>

}