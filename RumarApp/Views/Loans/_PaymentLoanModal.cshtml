@model RumarApp.Parameters.PayLoanParameter

@{
    ViewData["Title"] = "Pago de Prestamo";
}

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        @using (Html.BeginForm("PayLoan", "Loans", FormMethod.Post))
        {
            <div class="modal-header bg-primary">
                <h5 class="modal-title">
                    <i class="fa fa-check fa-fw pull-left"></i>
                    <span class="h2">Pago de la Cuota del Cliente</span>
                </h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label>Cliente</label>
                        <span class="form-control span-background mx-wi">@Html.DisplayFor(model => model.Client)</span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Quote" class="control-label">Monto a Pagar</label>
                        <input asp-for="Quote" class="form-control" />
                        <span asp-validation-for="Quote" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <form asp-action="PayLoan">
                    <input type="hidden" asp-for="LoanId" />
                    <input type="submit" value="Pagar" class="btn btn-success" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </form>
            </div>

        }
    </div>
</div>

