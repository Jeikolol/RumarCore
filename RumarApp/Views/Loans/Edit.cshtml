@model RumarApp.Models.LoanModel
@using RumarApp.Enums

@{
    ViewData["Title"] = "Editar";
}

<h1 class="text-center font-bold">Editar Prestamo</h1>

<hr />
<form asp-action="Edit">
    <section class="content col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <span class="h2">
                            Prestamo <span class="badge badge-secondary" style="font-size: 20px">#@Model.Id</span>
                        </span>
                    </div>
                    <div class="card-body row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group col-md-4 text-right">
                            <label asp-for="Capital">Capital<span class="text-danger">(*)</span></label>
                            <input asp-for="Capital" class="form-control text-right" type="number" min="0"/>
                            <span asp-validation-for="Capital" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4 text-right">
                            <label asp-for="TaxTypeId">Interes(%)<span class="text-danger">(*)</span></label>
                            <select asp-for="TaxTypeId" class="form-control text-right select2" asp-items="ViewBag.TaxTypeId"></select>
                            <span asp-validation-for="TaxTypeId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4 text-right">
                            <label asp-for="Quote">Cuotas de Pagos<span class="text-danger">(*)</span></label>
                            <input asp-for="Quote" class="form-control text-right" type="number" min="0" />
                            <span asp-validation-for="Quote" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="TransactionTypeId">Metodo de Pago</label>
                            <select asp-for="TransactionTypeId" class="form-control select2" asp-items="ViewBag.TransactionTypeId"></select>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="TransactionPaymentId">Cuota de Pago</label>
                            <select asp-for="TransactionPaymentId" class="form-control select2" asp-items="ViewBag.TransactionPaymentId"></select>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="ClientId">Cliente</label>
                            <select asp-for="ClientId" class="form-control select2" asp-items="ViewBag.ClientsId"></select>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="ClientTypeId">Tipo de Cliente</label>
                            <select asp-for="ClientTypeId" id="clientType" class="form-control select2" asp-items="ViewBag.ClientTypeId"></select>
                        </div>
                       @* <div class="form-group col-md-4">
                            <label asp-for="BeneficiaryIds">Garante</label>
                            @Html.ListBoxFor(x => x.BeneficiaryIds, Model.Beneficiaries, new {@class = "form-control select2", data_placeholder = "Seleccione uno o varios Garantes" })
                            <span asp-validation-for="BeneficiaryIds" class="text-danger"></span>
                        </div>*@
                        <div class="form-group col-md-4">
                            <label asp-for="Notes">Notas</label>
                            <textarea asp-for="Notes" class="form-control" style="width: 450px"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <a asp-action="Index" class="btn btn-secondary">Volver a la Consulta</a>
                <input type="submit" value="Editar" class="btn btn-success float-right">
            </div>
        </div>
    </section>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

